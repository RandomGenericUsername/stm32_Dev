{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "make all",
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Flash Project",
            "type": "shell",
            "command": "make flash",
            "dependsOn": [
                "Clean Project",
                "Build Project"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
    ]
}